generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Users {
  userid   Int     @id @default(sequence())
  name     String
  password String
}

model Cars {
  carid           Int      @id @default(sequence())
  cartype      String?
  carplate     String?
  date         DateTime?
  time         DateTime?
  tips         Float?
}

enum CarType {
  SaloonCar
  MPV_SUV_Minivan
  LargeVan
  Minibus
  Taxi_Saloon
  Taxi_SUV
}
